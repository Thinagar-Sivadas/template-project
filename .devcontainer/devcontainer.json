{
    "name": "Template Project",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "python",
    "workspaceFolder": "/app",
    "shutdownAction": "stopCompose",
    "overrideCommand": true,
    "postCreateCommand": [
        "bash",
        "-c",
        "pip install -e .[dev]",
        "pre-commit install"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-vscode-remote.remote-containers",
                "mikestead.dotenv",
                "usernamehw.errorlens",
                "ms-toolsai.jupyter-keymap",
                "PKief.material-icon-theme",
                "zhuangtongfa.material-theme",
                "KevinRose.vsc-python-indent",
                "ms-azuretools.vscode-docker",
                "tamasfe.even-better-toml",
                "github.vscode-github-actions",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "eamodio.gitlens",
                "hashicorp.terraform",
                "oderwat.indent-rainbow",
                "ms-python.isort",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-slideshow",
                "christian-kohler.path-intellisense",
                "ms-python.pylint",
                "muuvmuuv.vscode-sundial",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnType": true,
                    "editor.formatOnSave": true
                },
                "[json]": {
                    "editor.formatOnSave": true,
                    "files.insertFinalNewline": true
                },
                "redhat.telemetry.enabled": true,
                "workbench.iconTheme": "material-icon-theme",
                "workbench.colorTheme": "One Dark Pro",
                "workbench.preferredDarkColorTheme": "One Dark Pro Darker",
                "workbench.preferredHighContrastColorTheme": "One Dark Pro Darker",
                "workbench.preferredHighContrastLightColorTheme": "One Dark Pro",
                "workbench.preferredLightColorTheme": "One Dark Pro",
                "sundial.autoLocale": true,
                "window.zoomLevel": 1,
                "editor.inlineSuggest.enabled": true,
                "isort.check": true,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "github.copilot.enable": {
                    "*": true,
                    "plaintext": true,
                    "markdown": true,
                    "scminput": false
                },
                "security.workspace.trust.untrustedFiles": "open"
            }
        }
    }
}
